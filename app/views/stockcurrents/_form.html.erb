<div class="container">
  <!-- Outer Row -->
  <div class="row justify-content-center">
    <div class="col-xl-9 col-lg-11 col-md-8">
      <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
          <!-- Nested Row within Card Body -->
          <div class="row">
            <div class="col-lg-12">
              <div class="p-5">
                <div class="text-center">
                  <h1 class="h4 text-gray-900 mb-4">Update Stock Management</h1>
                </div>
                <%= form_with(model: stockcurrent, local: true) do |form| %>
                  <% if stockcurrent.errors.any? %>
                    <div id="error_explanation">
                      <h2><%= pluralize(stockcurrent.errors.count, "error") %> prohibited this stockcurrent from being saved:</h2>

                      <ul>
                      <% stockcurrent.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                      <% end %>
                      </ul>
                    </div>
                  <% end %>

                  <div class="from-group">
                    <%= form.label :stockmin %>
                    <%= form.number_field :stockmin, autofocus: true, autocomplete: "first name", class: "form-control form-control-user" %>
                  </div>

                  <div class="form-group">
                    <%= form.label :stockmax %>
                    <%= form.number_field :stockmax, autofocus: true, autocomplete: "first name", class: "form-control form-control-user" %>
                  </div>

                  <div class="form-group">
                    <%= form.label :critical_threshold %>
                    <%= form.number_field :critical_threshold, autofocus: true, autocomplete: "first name", class: "form-control form-control-user" %>
                  </div>

                  <div class="form-group">
                    <%= form.label :warning_threshold %>
                    <%= form.number_field :warning_threshold, autofocus: true, autocomplete: "first name", class: "form-control form-control-user" %>
                  </div>

                  <div class="actions">
                    <%= form.submit class: "btn btn-primary btn-user btn-block" %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
