<!-- Page Heading -->
<h1 class="h3 mb-2 text-gray-800">customer</h1>
<!-- DataTales Example -->
<div class="card shadow mb-4">
  <div class="card-header py-3">
    <a class="dropdown-item btn btn-primary" href="customer" data-toggle="modal" data-target="#customerModal">
      <i class="fas fa-user-plus fa-fw mr-2 text-gray-400"></i>
      Create customer
    </a>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
          <tr>
            <th> First Name</th>
            <th> Last Name </th>
            <th> Address </th>
            <th> Email </th>
            <th> Mobile </th>



          </tr>
        </thead>
        <!--
        <tfoot>
          <tr>
            <th>Screen</th>
            <th>Access</th>
          </tr>
        </tfoot>
        -->
        <tbody>
          <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.first_name %></td>
            <td><%= customer.last_name %></td>
            <td><%= customer.adress %></td>
            <td><%= customer.email %></td>
            <td><%= customer.mobile %></td>

            <td><%= link_to 'Show', customer ,class: "btn btn-warning" %></td>
            <td><%= link_to 'Edit', edit_customer_path(customer) ,class: "btn btn-warning" %></td>
            <td><%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' } ,class: "btn btn-danger" %></td>
            </tr>

          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<div class="modal fade" id="customerModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Create new customer</h5>
        <button class="close" type="button" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">Ã—</span>
        </button>
      </div>
      <div class="modal-body">

       <%= render 'form_new_customer' %>
      </div>
      <div class="modal-footer">
        <div class="actions">
          <%= submit_tag "Create customer", class: "btn btn-primary btn-user btn-block" %>
        </div>
      </div>
    </div>
  </div>
</div>
