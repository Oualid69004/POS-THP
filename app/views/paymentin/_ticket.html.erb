<div class="modal-header">
<%= link_to 'Print Ticket', '#', :onclick => 'window.print();return false;', class: 'modal-title', id: 'exampleModalLabel'%>
<button class="close" type="button" data-dismiss="modal" aria-label="Close">
  <span aria-hidden="true">×</span>
</button>
</div>
<div class="modal-body">
  <div class="my-5" id="section-to-print">
      <div class="row">
          <div class="well col-xs-10 col-sm-10 col-xs-offset-1 col-sm-offset-1 col-md-offset-3 bg-tickets mx-auto">
              <div class="row">
                  <div class="col-xs-6 col-sm-6 col-md-6">
                      <address>
                          <strong><%= ticket.company.name %></strong>
                          <br>
                          2135 Sunset Blvd
                          <br>
                          Los Angeles, CA 90026
                          <br>
                          <abbr title="Phone">P:</abbr> (213) 484-6829
                      </address>
                  </div>
                  <div class="col-xs-6 col-sm-6 col-md-6 text-right">
                      <p>
                          <em>Date: <%= ticket.created_at %></em>
                      </p>
                      <p>
                          <em>Receipt # <%= ticket.ticketid.upcase %></em>
                      </p>
                  </div>
              </div>
              <div class="row">
                  <div class="text-center">
                      <h1>Receipt</h1>
                  </div>
                  </span>
                  <table class="table table-hover">
                      <thead>
                          <tr>
                              <th>Product</th>
                              <th>#</th>
                              <th class="text-center">Price</th>
                              <th class="text-center">Total</th>
                          </tr>
                      </thead>
                      <tbody>
                        <% ticket.ticketlines.each do |ticketline| %>
                          <tr>
                              <td class="col-md-9"><em><%=ticketline.product.name%></em></h4></td>
                              <td class="col-md-1" style="text-align: center"> <%= ticketline.units %> </td>
                              <td class="col-md-1 text-center"><%= ticketline.product.pricesell %> €</td>
                              <td class="col-md-1 text-center"><%= ticketline.price %> €</td>
                          </tr>
                        <% end %>
                          <tr>
                              <td>   </td>
                              <td>   </td>
                              <td class="text-right"><h4><strong>Total: </strong></h4></td>
                              <td class="text-center text-danger"><h4><strong><%= ticket.ticketTotal %>€</strong></h4></td>
                          </tr>
                      </tbody>
                  </table>
              </div>
          </div>
      </div>
  </div>
</div>
