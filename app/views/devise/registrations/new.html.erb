<div class="bg-gradient-primary">
  <div class="container">
    <!-- Outer Row -->
    <div class="row justify-content-center">
      <div class="col-xl-10 col-lg-12 col-md-9">
        <div class="card o-hidden border-0 shadow-lg my-5">
          <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
              <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
              <div class="col-lg-6">
                <div class="p-5">
                  <div class="text-center">
                    <h1 class="h4 text-gray-900 mb-4">Welcome Back!</h1>
                  </div>
                  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "user") do |f| %>
                  <%= render "devise/shared/error_messages", resource: resource %>
                    <div class="form-group">
                        <%= f.label :first_name %><br />
                        <%= f.text_field :first_name, autofocus: true, autocomplete: "first name", class: "form-control form-control-user" %>
                      </div>
                      <div class="form-group">
                          <%= f.label :last_name %><br />
                          <%= f.text_field :last_name, autofocus: true, autocomplete: "last name", class: "form-control form-control-user" %>
                        </div>
                        <div class="form-group">
                          <%= f.label :email %><br />
                          <%= f.email_field :email, autofocus: true, autocomplete: "email", id: "exampleInputEmail", class: "form-control form-control-user" %>
                        </div>
                        <div class="form-group">
                          <%= f.label :password %>
                          <% if @minimum_password_length %>
                          <em>(<%= @minimum_password_length %> characters minimum)</em>
                          <% end %><br />
                          <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-user" %>
                        </div>
                        <div class="form-group">
                          <%= f.label :password_confirmation %><br />
                          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-user" %>
                        </div>
                        <div class="actions">
                          <%= f.submit "Sign up", class: "btn btn-primary btn-user btn-block" %>
                        </div>
                  <% end %>
                  <%= render "devise/shared/links" %>
                  <hr>
                  <div class="text-center">
                    <a class="small" href="forgot-password.html">Forgot Password?</a>
                  </div>
                  <div class="text-center">
                    <a class="small" href="register.html">Create an Account!</a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Bootstrap core JavaScript-->
  <script src="vendor/jquery/jquery.min.js"></script>
  <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
  <!-- Core plugin JavaScript-->
  <script src="vendor/jquery-easing/jquery.easing.min.js"></script>
  <!-- Custom scripts for all pages-->
  <script src="js/sb-admin-2.min.js"></script>
</div>
