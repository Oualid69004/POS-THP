<div class="bg-gradient-primary">
  <div class="container">
    <!-- Outer Row -->
    <div class="row justify-content-center">
      <div class="col-xl-10 col-lg-12 col-md-9">
        <div class="card o-hidden border-0 shadow-lg my-5">
          <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
              <div class="col-lg-6">
                <div class="p-5">
                  <div class="text-center">
                    <h1 class="h4 text-gray-900 mb-4">Please give us more informations</h1>
                  </div>
                  <%= form_tag(static_page_index_path, method: :post)%>
                    <div class="form-group">
                      <%=label_tag :company %><br />
                      <%= text_field_tag :company, nil, placeholder: "Company name", class: "form-control form-control-user" %>
                    </div>
                    <div class="form-group">
                      <%=label_tag :businessline %><br />
                      <%= select_tag :businessline, options_from_collection_for_select(@businesslines, "id", "name"), class: "browser-default custom-select"%>
                    </div>
                    <div class="form-group">
                      <%=label_tag :role %><br />
                      <%= select_tag :role, options_from_collection_for_select(@roles, "id", "name"), class: "browser-default custom-select"%>
                    </div>
                    <div class="actions">
                      <%= submit_tag "Sign up", class: "btn btn-primary btn-user btn-block" %>
                    </div>
                  <hr>
                </div>
              </div>
              <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
