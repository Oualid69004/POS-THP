<div class="modal-header">
<%= link_to 'Print Report', '#', :onclick => 'window.print();return false;', class: 'modal-title', id: 'exampleModalLabel'%>
<button class="close" type="button" data-dismiss="modal" aria-label="Close">
  <span aria-hidden="true">Ã—</span>
</button>
</div>
<div class="modal-body">
  <div class="my-5" id="section-to-print">
      <div class="row">
          <div class="well col-xs-10 col-sm-10 col-xs-offset-1 col-sm-offset-1 col-md-offset-3 bg-tickets mx-auto">
              <div class="row">
                  <div class="col-xs-6 col-sm-6 col-md-6">
                      <address>
                          <strong><%= current_user.company.name %></strong>
                          <br>
                          2135 Sunset Blvd
                          <br>
                          Los Angeles, CA 90026
                          <br>
                          <abbr title="Phone">P:</abbr> (213) 484-6829
                      </address>
                  </div>
                  <div class="col-xs-6 col-sm-6 col-md-6 text-right">
                      <p>
                          <em>Date: <%= Date.today %></em>
                      </p>
                      <p>
                          <em>Report # <%=  %></em>
                      </p>
                  </div>
              </div>
              <div class="row">
                  <div class="text-center">
                      <h1>Report</h1>
                  </div>
                  <table class="table table-hover">
                    <tbody>
                      <tr>
                        <td>Finance capital</td>
                        <td><%= @finance_capital %></td>
                      </tr>
                      <tr>
                        <td>Stock value</td>
                        <td><%=@stock_value%></td>
                      </tr>
                      <tr>
                        <td>Estimated Margin</td>
                        <td><%=@margin%></td>
                      </tr>
                      <tr>
                        <td>Receipt</td>
                        <td><%=@receipt%></td>
                      </tr>
                    </tbody>
                  </table>
              </div>
          </div>
      </div>
  </div>
</div>
