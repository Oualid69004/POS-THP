<!-- Page Heading -->
<h1 class="h3 mb-2 text-gray-800">Employees</h1>
<!-- DataTales Example -->
<div class="card shadow mb-4">
  <div class="card-header py-3">
    <a class="dropdown-item btn btn-primary" href="#" data-toggle="modal" data-target="#employeeModal">
      <i class="fas fa-user-plus fa-fw mr-2 text-gray-400"></i>
      Create employee
    </a>
  </div>

  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
          <tr>
            <th>First name</th>
            <th>Last name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Destroy</th>
          </tr>
        </thead>
        <!--
        <tfoot>
          <tr>
            <th>Screen</th>
            <th>Access</th>
          </tr>
        </tfoot>
        -->
        <tbody>
          <% @employees.each do |employee| %>
          <tr>
            <td><%= employee.first_name %></td>
            <td><%= employee.last_name %></td>
            <td><%= employee.email %></td>
            <td><%= employee.role.name %></td>
            
            <td><%= link_to 'Edit', edit_employee_path(employee) ,class: "btn btn-warning" %></td>
            <td><%= link_to 'Destroy', employee, method: :delete, data: { confirm: 'Are you sure?' } ,class: "btn btn-danger" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>


<div class="modal fade" id="employeeModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Create new employee</h5>
        <button class="close" type="button" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">Ã—</span>
        </button>
      </div>

      <div class="modal-body">
        <%= render 'form_new_user' %>
      </div>


      <div class="modal-footer">
        <div class="actions">
          <%= submit_tag "Create employee", class: "btn btn-primary btn-user btn-block" %>
        </div>
      </div>
    </div>
  </div>
</div>


